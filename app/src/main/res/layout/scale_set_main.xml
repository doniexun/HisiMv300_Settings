    <FrameLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/scale_set_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:clickable="true"
        android:background="@drawable/zoombackground">
	    <RelativeLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:focusable="false"
	        android:layout_marginLeft="300dp"
	        android:layout_marginTop="50dp">
	        <ImageView
	            android:id="@+id/scale_set_main_image"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="15dp"
	            android:focusable="false"
	            android:src="@drawable/arrow_left"
	            android:contentDescription="@string/setting_description" />
	        <TextView
	            android:id="@+id/scale_set_main_text"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@+id/scale_set_main_image"
	            android:layout_marginLeft="10dp"
	            android:textColor="#ffe1e1e1"
	            android:textSize="36sp"
	            android:text="@string/display_title"/>
	        <TextView
	            android:id="@+id/scale_set_main_hint"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_marginLeft="18dp"
	            android:layout_below="@+id/scale_set_main_text"
	            android:textColor="#ffe1e1e1"
	            android:textSize="24sp"
	            android:text="@string/scale_title_hint"/>
	    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:focusable="false"
        android:gravity="center"
        android:orientation="vertical" >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false">
        	<ImageView
                android:id="@+id/move_set_left"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:background="@drawable/arrow_normal_left"
                android:focusable="false"
                android:visibility="invisible"
                android:contentDescription="@string/setting_description"  />
        	<ImageView
                android:id="@+id/move_set_up"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:background="@drawable/arrow_normal_up"
                android:focusable="false"
                android:contentDescription="@string/setting_description"  />
            <RelativeLayout
                android:id="@+id/scale_set_count_layout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:focusable="false"
                android:layout_toRightOf="@+id/move_set_left"
                android:layout_below="@+id/move_set_up">
                <ImageView
                    android:id="@+id/scale_set_count_bg"
                    android:layout_width="200dp"
                    android:layout_height="100dp"
                    android:layout_centerHorizontal="true"
                    android:background="@color/blue"
                    android:focusable="false"
	                android:contentDescription="@string/setting_description" />
                <TextView
                    android:id="@+id/scale_set_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:textColor="#ffe1e1e1"
                    android:textSize="28sp"/>
            </RelativeLayout>

            <ImageView
                android:id="@+id/move_set_down"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/scale_set_count_layout"
                android:layout_centerHorizontal="true"
                android:background="@drawable/arrow_normal_down"
                android:focusable="false"
                android:contentDescription="@string/setting_description" />
           	<ImageView
                android:id="@+id/move_set_right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/scale_set_count_layout"
                android:layout_centerVertical="true"
                android:visibility="invisible"
                android:background="@drawable/arrow_normal_right"
                android:focusable="false" 
                android:contentDescription="@string/setting_description" />
        </RelativeLayout>

	     <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:layout_marginTop="20dp"
	         android:focusable="false"
	         android:orientation="vertical"
	         android:gravity="center">
		     <TextView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:textColor="#ffe1e1e1"
		         android:textSize="16sp"
		         android:text="@string/scale_introduce_one"
		         android:contentDescription="@string/setting_description" />
		     <TextView
		         android:id="@+id/scale_introduce_two"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginTop="20dp"
		         android:text="@string/scale_introduce_two"
		         android:textColor="#ffe1e1e1"
		         android:textSize="16sp" />
		     <ImageView
		         android:layout_width="728dp"
		         android:layout_height="wrap_content"
		         android:scaleType="fitXY"
		         android:layout_marginTop="20dp"
		         android:src="@drawable/line"
		         android:contentDescription="@string/setting_description" />
	      </LinearLayout>
	      <LinearLayout
	         android:layout_width="match_parent"
	         android:layout_height="wrap_content"
	         android:gravity="center"
	         android:focusable="false"
	         android:layout_marginTop="20dp"
	         android:orientation="horizontal">
		     <TextView
		         android:id="@+id/scale_set_back"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:text="@string/scale_move_back"
		         android:textColor="#ffe1e1e1"
		         android:textSize="16sp" />
		     <ImageView
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="20dp"
		         android:src="@drawable/setting_wifi_right_line03"
		         android:contentDescription="@string/setting_description" />
		     <TextView
		         android:id="@+id/scale_set_OK"
		         android:layout_width="wrap_content"
		         android:layout_height="wrap_content"
		         android:layout_marginLeft="20dp"
		         android:text="@string/scale_OK"
		         android:textColor="#ffe1e1e1"
		         android:textSize="16sp"/>
		     </LinearLayout>
	     </LinearLayout>
    </FrameLayout>
