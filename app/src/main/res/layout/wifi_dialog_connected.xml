<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg">

    <LinearLayout
        android:id="@+id/id_connected_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/id_wifi_connected_ssid"
            android:layout_width="400dp"
            android:layout_height="40dp"
            android:gravity="center|fill_vertical"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/FONT_SIZE_SMALL" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_status"
                android:textColor="@color/white"
                android:textSize="@dimen/FONT_SIZE_SMALL" />

            <TextView
                android:id="@+id/id_wifi_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:text="@string/wifi_connected"
                android:textColor="@color/white"
                android:textSize="@dimen/FONT_SIZE_SMALL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/wifi_ip"
                android:textColor="@color/white"
                android:textSize="@dimen/FONT_SIZE_SMALL" />

            <TextView
                android:id="@+id/id_wifi_connected_ip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="left"
                android:textColor="@color/white"
                android:textSize="@dimen/FONT_SIZE_SMALL" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:visibility="visible">

            <Button
                android:id="@+id/id_wifi_connected_cancle"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:background="@drawable/submit_selector"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/FONT_SIZE_SMALL" />

            <Button
                android:id="@+id/id_wifi_connected_ok"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_marginLeft="60dp"
                android:background="@drawable/submit_selector"
                android:textColor="#FFFFFF"
                android:textSize="@dimen/FONT_SIZE_SMALL" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>