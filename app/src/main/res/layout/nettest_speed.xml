<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="10dp"
            android:contentDescription="@string/app_name"
            android:scaleType="fitCenter"
            android:src="@drawable/back" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:text="@string/network_speed"
            android:textColor="#ffe1e1e1"
            android:textSize="30sp" />
    </LinearLayout>

    <Button
        android:layout_width="1080dp"
        android:layout_height="3dp"
        android:layout_gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:contentDescription="@string/app_name"
        android:focusable="false"
        android:gravity="center_horizontal"
        android:textColor="#565656" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="500dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_nettest"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/aa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/display_box_background"
                android:gravity="bottom">

                <ImageView
                    android:id="@+id/iv_tester"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_margin="4.0dip"
                    android:src="@drawable/netspeed_dial" />

                <ImageView
                    android:id="@+id/iv_pointer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/iv_heart"
                    android:layout_alignRight="@+id/iv_heart"
                    android:layout_marginBottom="12.0dip"
                    android:layout_marginRight="13.0dip"
                    android:layout_marginTop="8.0dip"
                    android:src="@drawable/netspeed_needle" />

                <ImageView
                    android:id="@id/iv_heart"
                    android:layout_width="26.0dip"
                    android:layout_height="26.0dip"
                    android:layout_alignBottom="@id/iv_tester"
                    android:layout_centerHorizontal="true"
                    android:layout_marginBottom="11.0dip"
                    android:src="@drawable/netspeed_heart" />

            </RelativeLayout>

            <TextView
                android:id="@+id/textView_speed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="0.00 Mbit/s"
                android:textColor="#ffe1e1e1"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="60dp"
                android:gravity="center_horizontal">

                <Button
                    android:id="@+id/start_speed"
                    style="?title_button"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/titlebutton_selector"
                    android:text="@string/network_test_start"
                    android:textColor="#ffe1e1e1"
                    android:textSize="28sp" />

                <!--<Button
                    android:id="@+id/stop_speed"
                    style="?title_button"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="25dp"
                    android:background="@drawable/titlebutton_selector"
                    android:text="@string/network_test_stop"
                    android:textColor="#ffe1e1e1"
                    android:textSize="28sp" />-->

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="400dp"
            android:layout_height="300dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/background_nettest"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_max_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/max_speed_title"
                    android:textColor="#ffe1e1e1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_max_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0.00 Mbit/s"
                    android:textColor="#ffe1e1e1"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="50dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView_average_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/average_speed_title"
                    android:textColor="#ffe1e1e1"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView_average_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="0.00 Mbit/s"
                    android:textColor="#ffe1e1e1"
                    android:textSize="30sp" />

            </LinearLayout>


        </LinearLayout>

    </LinearLayout>


</LinearLayout>
