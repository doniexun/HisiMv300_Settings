<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">
    
    <ImageView 
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/lan_dhcp"
        android:contentDescription="@string/action_settings"/>
    
	<RelativeLayout
	    android:layout_width="wrap_content"
	    android:layout_height="250dp"
	    android:layout_marginTop="40dp"
        android:layout_marginBottom="20dp"
	    android:orientation="vertical">
	    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:text="@string/pppoe_setting"
            android:textSize="25sp"
            android:textColor="#ffe1e1e1"
            android:gravity="center_vertical"
            android:layout_marginLeft="65dp"/>
	    <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           	android:orientation="horizontal"
           	android:layout_alignParentBottom="true"
           	android:layout_marginBottom="10dp">
            <CheckBox 
                android:id="@+id/pppoe_pass_visiable"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
	            android:layout_marginLeft="65dp"
                android:drawablePadding="10dp"
                android:checked="false"
                android:text="@string/pppoe_pass_visible"
                android:textColor="#ffe1e1e1"
                android:textSize="19sp"
                android:button="@null"
                android:drawableLeft="@drawable/display_selector"
                android:background="@drawable/button_selector"/>
		   	<Button 
			    android:id="@+id/pppoe_submit"
			    android:layout_width="120dp"
			    android:layout_height="50dp"
			    android:layout_marginLeft="150dp"
			    android:layout_marginTop="20dp"
			    android:textSize="21sp"
			    android:text="@string/submit"
			    android:textColor="#ffe1e1e1"
			    android:background="@drawable/submit_selector"
			    android:nextFocusRight="@+id/lan"/>
        </LinearLayout>
	    <LinearLayout
	        android:layout_width="700dp"
	        android:layout_height="wrap_content"
	        android:layout_marginLeft="50dp"
	        android:layout_marginBottom="20dp"
	        android:orientation="vertical"
	        android:layout_marginTop="30dp" >
	        <EditText 
	            android:id="@+id/pppoe_username"
	            android:inputType="text"
	            android:layout_width="650dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="15dp"
	            android:layout_marginBottom="20dp"
	            android:hint="@string/username_hint"
	            android:textSize="21sp"
	            android:textColor="#ffe1e1e1"
	            android:textCursorDrawable="@drawable/edit_cursor"
	            android:singleLine="true"
	            android:maxLength="30"
	            android:background="@drawable/edit_selector"
	            android:labelFor="@id/pppoe_username"
	            android:nextFocusRight="@+id/lan"
	            android:nextFocusUp="@+id/pppoe"/>
	        <EditText 
	            android:id="@+id/pppoe_password"
	            android:layout_width="650dp"
	            android:layout_height="60dp"
	            android:layout_marginLeft="15dp"
	            android:inputType="textPassword"
	            android:hint="@string/password_hint"
	            android:textSize="21sp"
	            android:textColor="#ffe1e1e1"
	            android:textCursorDrawable="@drawable/edit_cursor"
	            android:singleLine="true"
	            android:maxLength="16"
	            android:background="@drawable/edit_selector"
	            android:labelFor="@id/pppoe_password"
	            android:nextFocusRight="@+id/lan"
	            android:nextFocusDown="@id/pppoe_submit"/>
	    </LinearLayout>
	</RelativeLayout>
</LinearLayout>
