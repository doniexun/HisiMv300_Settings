<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="533dp"
    android:layout_height="253dp"
    android:background="@drawable/dialog_bg"
    android:orientation="vertical" 
    android:gravity="center">
   
	<TextView 
	    android:id="@+id/usb_update_textview"
	    android:layout_width="wrap_content"
	    android:layout_height="wrap_content"
	    android:gravity="center"
	    android:text="@string/update_yes_no"
	    android:textSize="25sp"
	    android:textColor="#ffe1e1e1"/>
	
	
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal" >

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/buttonABC"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/submit_selector"
            android:text="@string/update"
            android:textColor="#ffe1e1e1"
            android:textSize="20sp" >
        </Button>

        <Button
            style="?android:attr/buttonBarButtonStyle"
            android:id="@+id/buttonKEY"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/submit_selector"
            android:text="@string/update_cancel"
            android:textColor="#ffe1e1e1"
            android:textSize="20sp" >
        </Button>
    </LinearLayout>
    </LinearLayout>
