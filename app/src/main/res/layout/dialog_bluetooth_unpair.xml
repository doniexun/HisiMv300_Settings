<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="533dp"
    android:layout_height="253dp"
    android:background="@drawable/dialog_bg"
    android:gravity="center"
    android:orientation="vertical">

    <TextView
        android:id="@+id/usb_update_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/input_opration"
        android:textColor="#ffe1e1e1"
        android:textSize="25sp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_cancel_unpair"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:background="@drawable/submit_selector"
            android:text="@string/dialog_cancel"
            android:textColor="#ffe1e1e1"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btn_ok_unpair"
            style="?android:attr/buttonBarButtonStyle"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginLeft="70dp"
            android:background="@drawable/submit_selector"
            android:text="@string/dialog_ok"
            android:textColor="#ffe1e1e1"
            android:textSize="20sp" />

    </LinearLayout>

</LinearLayout>